<div class="content">
    <!-- Visas Table -->
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="header">
                    <b class="h6 f-right">إسترداد التأمينات</b>
                    <a href="/finance" class="button f-left">رجوع</a>
                </div>
                <div class="content table-responsive table-full-width">
                    <table class=" ">
                        <thead>
                            <th>#</th>
                            <th>الرقم التسلسلي</th>
                            <th>اسم العميل</th>
                            <th>التأشيرة</th>
                            <th>تاريخ الإصدار</th>
                            <th>التأمين</th>
                            <th>المدفوع</th>
                            <th>المسترد</th>
                            <th>حالة الاسترداد</th>
                            <th></th>
                        </thead>
                        <tbody id="depositBackTableBody">

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <!-- New Expense Refund Modal -->
    <div id="newExpenseRefundModal" class="modal">
        <div class="modal-content">
            <div class="modal-title">إسترجاع مبلغ تأمين</div>
            <form>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <input type="hidden" id="serviceId">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="serialNumber">الرقم التسلسلي</label>
                            <input type="text" id="serialNumber" class="inputs" placeholder="الرقم التسلسلي" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="name">إسم العميل</label>
                            <input type="text" id="name" class="inputs" placeholder="إسم العميل" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="amount">المبلغ المحدد</label>
                            <input type="text" id="dueAmount" class="inputs" placeholder="المبلغ المطلوب" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="amount">المبلغ المسترد</label>
                            <input type="number" id="amount" class="inputs" placeholder="المبلغ المسترد">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="comment">الملاحظات</label>
                            <textarea class="inputs" id="comment"></textarea>
                        </div>
                    </div>
                </div>

                <button type="button" class="btn btn-success btn-fill" id="depositBack-save">إسترداد</button>

                <button type="button" id="closeModalContentBtn" class="btn btn-danger btn-fill"
                    onclick="closeModal('newExpenseRefundModal');">إغلاق</button>
            </form>

        </div>
    </div>
</div>

<script src="/js/finance/depositBack.js"></script>