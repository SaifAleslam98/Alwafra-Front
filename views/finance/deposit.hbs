<div class="content">
    <div class="row">
        <div class="col-md-12">

            <div class="card">
                <div class="header">
                    <b class="h6 f-right">سجل التأمينات</b>
                    <a href="/finance" class="button f-left">رجوع</a>
                </div>
                <div class="content table-responsive table-full-width">
                    <table class=" ">
                        <thead>
                            <th>#</th>
                            <th>الرقم التسلسلي</th>
                            <th>اسم العميل</th>
                            <th>التأشيرة</th>
                            <th>تاريخ الإصدار</th>
                            <th>التأمين</th>
                            <th>المستلم</th>
                            <th>المسترد</th>
                            <th>حالة السداد</th>
                            <th></th>
                        </thead>
                        <tbody id="depositTableBody">

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    <!-- New Payment Modal -->
    <div id="newPaymentModal" class="modal">
        <div class="modal-content">
            <div class="modal-title">إضافة عملية سداد جديدة</div>
            <form>

                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">

                            <input type="text" id="serialNumber" class="inputs" placeholder="الرقم التسلسلي" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="serviceType">نوع الخدمة</label>
                            <input type="text" id="serviceType" class="inputs" value="تأمين" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <input type="hidden" id="serviceId" class="inputs" placeholder="الرقم التسلسلي" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="dueAmount">المبلغ المطلوب</label>
                            <input type="text" id="dueAmount" class="inputs" placeholder="المبلغ المطلوب" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="form-group">
                            <label for="amount">مبلغ السداد</label>
                            <input type="number" id="amount" class="inputs" placeholder="مبلغ السداد">
                        </div>
                    </div>
                </div>

                <button type="button" class="btn btn-success btn-fill" id="deposit-payment">سداد</button>

                <button type="button" id="closeModalContentBtn" class="btn btn-danger btn-fill"
                    onclick="closeModal('newPaymentModal');">إغلاق</button>
            </form>

        </div>
    </div>
</div>

<script src="/js/finance/deposit.js"></script>